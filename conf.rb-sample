#
# Configuration for TrunkBot
#

# Primary Settings
$conf = {
  :version => '1.4',

  :dir => {
    :root => "/path/to/trunkbot/"
  }
}

# IRC Settings
$conf[:irc] = {
  :host => "irc.host.net",
  :port => "6667",
  :nick => "bot_name",
  :pass => "bot_pass",
  :chan => "#chan1,#chanN"
}

$conf[:log] = {
  :dir => $conf[:dir][:root] + "log/",
  :raw => false,
  :enabled => false,

  # Should output go to a logfile instead of stdout?
  :output => false
}
